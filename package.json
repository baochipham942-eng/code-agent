{
  "name": "code-agent",
  "version": "0.8.10",
  "description": "AI Coding Assistant with Generation Comparison",
  "type": "module",
  "main": "dist/main/index.cjs",
  "author": "Lin Chen",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:cleanup && concurrently -k --kill-others-on-fail \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:cleanup": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
    "dev:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --external:electron --external:better-sqlite3 --external:playwright --external:playwright-core --external:keytar --external:isolated-vm --outfile=dist/main/index.cjs --sourcemap --watch",
    "dev:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist/preload/index.cjs --sourcemap",
    "dev:renderer": "vite",
    "dev:electron": "sleep 3 && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --external:electron --external:better-sqlite3 --external:playwright --external:playwright-core --external:keytar --external:isolated-vm --outfile=dist/main/index.cjs --minify",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist/preload/index.cjs --minify",
    "build:renderer": "vite build",
    "start": "npm run build:main && npm run build:preload && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:mac:signed": "CSC_LINK=$CSC_LINK CSC_KEY_PASSWORD=$CSC_KEY_PASSWORD electron-builder --mac",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:generations": "vitest run tests/generations",
    "build:mcp-server": "esbuild src/main/mcp/mcp-server-entry.ts --bundle --platform=node --format=esm --external:@modelcontextprotocol/sdk --outfile=dist/mcp-server.js",
    "mcp-server": "node dist/mcp-server.js",
    "docs": "typedoc"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@supabase/supabase-js": "^2.90.1",
    "axios": "^1.13.2",
    "better-sqlite3": "^11.6.0",
    "diff": "^7.0.0",
    "electron-store": "^10.0.0",
    "glob": "^11.0.0",
    "gpt-tokenizer": "^2.5.0",
    "groq-sdk": "^0.8.0",
    "highlight.js": "^11.10.0",
    "https-proxy-agent": "^7.0.6",
    "isolated-vm": "^6.0.2",
    "keytar": "^7.9.0",
    "langfuse": "^3.38.6",
    "marked": "^15.0.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.70.0",
    "playwright": "^1.57.0",
    "react-virtuoso": "^4.18.1",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/diff": "^6.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "lucide-react": "^0.468.0",
    "postcss": "^8.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-katex": "^7.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.17"
  },
  "build": {
    "appId": "com.codeagent.app",
    "productName": "Code Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSScreenCaptureUsageDescription": "Code Agent 需要屏幕录制权限来实现 GUI Agent 功能",
        "NSAppleEventsUsageDescription": "Code Agent 需要自动化权限来控制其他应用程序",
        "NSCameraUsageDescription": "Code Agent 需要相机权限用于屏幕截图功能",
        "NSMicrophoneUsageDescription": "Code Agent 需要麦克风权限来实现语音输入功能"
      }
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png"
    },
    "publish": null
  }
}
